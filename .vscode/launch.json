
{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Django",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "justMyCode": false,
        "pythonPath": "${workspaceRoot}/venv/bin/python3",
        "program": "${workspaceRoot}/manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput",
                "DjangoDebugging"
            ],
        },
    ]
}